{{ define "home" }}
  {{ template "layout_header" . }}

  {{ if .CurrentUser }}
    {{ $u := .CurrentUser }}
    {{ $ctx := .Data }}

    <section class="space-y-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <div>
          <h2 class="text-2xl font-semibold tracking-tight">
            Welcome back, <span class="text-emerald-400">{{ $u.DisplayName }}</span>
          </h2>
          <p class="text-sm text-slate-400 mt-1">
            What do you want to brew today?
          </p>
        </div>

        <div class="flex flex-wrap gap-2">
          <a href="/decks/new"
             class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-emerald-500 text-slate-950 text-sm font-semibold hover:bg-emerald-400 transition-colors">
            <span>New deck</span>
          </a>
          <a href="/cards/search"
             class="inline-flex items-center gap-2 px-4 py-2 rounded-md border border-slate-700 bg-slate-900 text-sm text-slate-200 hover:border-emerald-400 hover:text-emerald-300 transition-colors">
            Search cards
          </a>
        </div>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        <section class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
          <h3 class="text-sm font-semibold text-slate-100 mb-2">Quick links</h3>
          <ul class="space-y-1 text-sm text-slate-300">
            <li><a href="/decks" class="hover:text-emerald-300 transition-colors">View all decks</a></li>
            <li><a href="/decks/new" class="hover:text-emerald-300 transition-colors">Create a new Commander deck</a></li>
            <li><a href="/cards/search" class="hover:text-emerald-300 transition-colors">Search cards</a></li>
            <li><a href="/commanders/search" class="hover:text-emerald-300 transition-colors">Find a new commander</a></li>
          </ul>
        </section>

        <section class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
          <h3 class="text-sm font-semibold text-slate-100 mb-2">Recent decks</h3>

          {{ if $ctx.RecentDecks }}
            <ul class="space-y-2 text-sm">
              {{ range $ctx.RecentDecks }}
                <li class="flex items-center justify-between gap-2">
                  <div>
                    <a href="/decks/{{ .ID }}" class="font-medium text-slate-100 hover:text-emerald-300 transition-colors">
                      {{ .Name }}
                    </a>
                    {{ if .CommanderName }}
                      <p class="text-xs text-slate-400">
                        Commander: {{ .CommanderName }}
                      </p>
                    {{ end }}
                  </div>
                </li>
              {{ end }}
            </ul>
          {{ else }}
            <p class="text-sm text-slate-400">
              You don't have any decks yet.
              <a href="/decks/new" class="text-emerald-400 hover:text-emerald-300 transition-colors">
                Create your first deck
              </a>.
            </p>
          {{ end }}
        </section>
      </div>
    </section>

  {{ else }}
    <section class="max-w-2xl mx-auto py-10 space-y-10">
      <!-- Logo / Hero -->
      <div class="text-center space-y-4">
        <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full border border-purple-500/60 bg-slate-950/70 shadow-lg shadow-purple-500/20">
          <div class="flex h-9 w-9 items-center justify-center rounded-md bg-gradient-to-br from-purple-500 via-fuchsia-500 to-slate-100 shadow-md shadow-purple-500/40">
            <!-- Simple tomb / pillar icon -->
            <svg viewBox="0 0 32 32" aria-hidden="true" class="h-5 w-5 text-slate-900/70">
              <path d="M10 27V13.5C10 9.91 12.91 7 16.5 7C20.09 7 23 9.91 23 13.5V27H10Z" fill="currentColor" />
              <rect x="9" y="25" width="15" height="3" rx="0.5" class="text-slate-800" fill="currentColor" />
            </svg>
          </div>
          <div class="text-left">
            <p class="text-[0.7rem] uppercase tracking-[0.18em] text-purple-300/80">
              Commander playground
            </p>
            <p class="text-xs text-slate-400">
              Search cards • Brew decks • Learn rulings
            </p>
          </div>
        </div>

        <h1 class="text-4xl sm:text-5xl font-semibold tracking-tight">
          <span class="bg-gradient-to-br from-purple-300 via-fuchsia-300 to-slate-100 bg-clip-text text-transparent">
            Mana Tomb
          </span>
        </h1>

        <p class="text-sm sm:text-base text-slate-300 max-w-xl mx-auto">
          A hobby project for Commander players. Search Magic cards, explore decks, and learn rulings — no account required to start using it.
        </p>
      </div>

      <!-- Card Search -->
      <div class="space-y-4">
        <form action="/cards/search" method="GET" class="relative">
          <label for="q" class="sr-only">Search for a Magic card</label>
          <div class="flex items-center gap-2 rounded-xl border border-slate-800 bg-slate-950/80 px-3 py-2 shadow-inner shadow-purple-500/10 focus-within:border-purple-400/80 focus-within:shadow-purple-500/25 transition-all">
            <span class="inline-flex items-center justify-center rounded-md border border-slate-800 bg-slate-900/80 px-2 py-1 text-[0.7rem] font-medium uppercase tracking-[0.18em] text-slate-300">
              Card search
            </span>
            <input
              id="q"
              name="q"
              type="text"
              placeholder="Search for a Magic card (e.g. Sol Ring, Mana Drain)..."
              class="flex-1 bg-transparent text-sm text-slate-100 placeholder:text-slate-500 focus:outline-none"
              autocomplete="off"
            />
            <button
              type="submit"
              class="inline-flex items-center rounded-md bg-purple-500 px-3 py-1.5 text-xs font-semibold text-slate-950 hover:bg-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-slate-900 transition-colors"
            >
              Search
            </button>
          </div>
        </form>

        <p class="text-xs text-slate-500 text-center">
          Powered by Scryfall. Type a card name and hit enter to get started.
        </p>
      </div>

      <!-- Primary actions -->
      <div class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-2 rounded-xl border border-slate-800 bg-slate-950/80 p-1.5 shadow-md shadow-purple-500/10">
          <!-- Browse Decks -->
          <a href="/decks/public"
             class="group flex flex-col items-center justify-center rounded-lg px-3 py-3 text-center text-xs sm:text-sm font-medium text-slate-200 hover:bg-slate-900/80 hover:border-purple-400/60 border border-transparent transition-all">
            <p class="mb-1 text-[0.7rem] uppercase tracking-[0.18em] text-purple-300/80 group-hover:text-purple-200">
              Browse Decks
            </p>
            <p class="text-[0.72rem] text-slate-400">
              Explore community decks and see what other players are brewing.
            </p>
          </a>

          <!-- Rulings Search -->
          <a href="/rules"
             class="group flex flex-col items-center justify-center rounded-lg px-3 py-3 text-center text-xs sm:text-sm font-medium text-slate-200 hover:bg-slate-900/80 hover:border-purple-400/60 border border-transparent transition-all">
            <p class="mb-1 text-[0.7rem] uppercase tracking-[0.18em] text-purple-300/80 group-hover:text-purple-200">
              Rulings Search
            </p>
            <p class="text-[0.72rem] text-slate-400">
              Ask tricky rules questions and learn how cards interact.
            </p>
          </a>

          <!-- Deck Builder -->
          <a href="/decks/new"
             class="group flex flex-col items-center justify-center rounded-lg px-3 py-3 text-center text-xs sm:text-sm font-medium text-slate-200 hover:bg-slate-900/80 hover:border-purple-400/60 border border-transparent transition-all">
            <p class="mb-1 text-[0.7rem] uppercase tracking-[0.18em] text-purple-300/80 group-hover:text-purple-200">
              Deck Builder
            </p>
            <p class="text-[0.72rem] text-slate-400">
              Start a new Commander deck and tweak it as you go.
            </p>
          </a>
        </div>

        <p class="text-[0.7rem] text-slate-500 text-center">
          Want to save decks and sync between devices?
          <a href="/signup" class="text-purple-300 hover:text-purple-200 font-medium">
            Create an account
          </a>
          or
          <a href="/login" class="text-purple-300 hover:text-purple-200 font-medium">
            log in
          </a>.
        </p>
      </div>
    </section>
  {{ end }}

  {{ template "layout_footer" . }}
{{ end }}