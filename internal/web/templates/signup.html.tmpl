{{ define "signup" }}
  {{ template "layout_header" . }}
  {{ $d := .Data }}

  <div class="flex items-center justify-center">
    <div class="w-full max-w-md">
      <div class="mb-6 text-center">
        <h2 class="text-2xl font-semibold tracking-tight">
          Create your account
        </h2>
        <p class="mt-1 text-sm text-slate-400">
          Start building and managing your Commander decks.
        </p>
      </div>

      <div class="rounded-lg border border-slate-800 bg-slate-900/70 p-6">
        <form method="POST" action="/signup" class="space-y-4">
          <div class="text-sm text-slate-200">
            <label class="block">
              <span class="block text-xs font-medium text-slate-400 mb-1">Display name</span>
              <input type="text"
                     name="display_name"
                     value="{{ $d.DisplayName }}"
                     required
                     class="w-full rounded-md border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-1 focus:ring-emerald-400 focus:border-emerald-400">
            </label>
          </div>

          <div class="text-sm text-slate-200">
            <label class="block">
              <span class="block text-xs font-medium text-slate-400 mb-1">Email</span>
              <input type="email"
                     name="email"
                     value="{{ $d.Email }}"
                     required
                     class="w-full rounded-md border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-1 focus:ring-emerald-400 focus:border-emerald-400">
            </label>
          </div>

          <div class="text-sm text-slate-200">
            <label class="block">
              <span class="block text-xs font-medium text-slate-400 mb-1">Password</span>
              <input type="password"
                     name="password"
                     required
                     class="w-full rounded-md border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-1 focus:ring-emerald-400 focus:border-emerald-400">
            </label>
            <p class="mt-1 text-xs text-slate-500">
              Use a strong password you donâ€™t use elsewhere.
            </p>
          </div>

          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 pt-2">
            <button type="submit"
                    class="inline-flex items-center justify-center px-4 py-2 rounded-md bg-emerald-500 text-slate-950 text-sm font-semibold hover:bg-emerald-400 transition-colors w-full sm:w-auto">
              Create account
            </button>

            <p class="text-xs text-slate-500">
              Already have an account?
              <a href="/login" class="text-emerald-400 hover:text-emerald-300 transition-colors">
                Log in
              </a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>

  {{ template "layout_footer" . }}
{{ end }}