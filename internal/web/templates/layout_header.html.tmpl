{{ define "layout_header" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Mana Tomb</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Tailwind CDN (simple, no build step) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Optional: tweak Tailwind theme a bit -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            tomb: {
              bg: "#020617",      // slate-950-ish
              surface: "#020817", // deep blue/black
              accent: "#0ea5e9",  // sky-500-ish
            }
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen bg-slate-950 text-slate-100 antialiased">
  <div class="min-h-screen flex flex-col">
    <header class="border-b border-slate-800 bg-slate-900/80 backdrop-blur">
      <div class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between gap-4">
        <a href="/" class="flex items-center gap-2">
          <div class="h-8 w-8 rounded-full border border-sky-400/60 bg-sky-500/10 flex items-center justify-center text-sky-300 font-bold text-sm">
            MT
          </div>
          <span class="text-lg font-semibold tracking-wide">Mana Tomb</span>
        </a>

        <nav class="flex items-center gap-3 text-sm">
          <a href="/decks" class="text-slate-300 hover:text-sky-300 transition-colors">My Decks</a>
          <a href="/cards/search" class="text-slate-300 hover:text-sky-300 transition-colors">Cards</a>
          <a href="/commanders/search" class="text-slate-300 hover:text-sky-300 transition-colors hidden sm:inline">
            Commanders
          </a>

          {{ if .CurrentUser }}
            <span class="text-slate-400 hidden md:inline">
              Hi, {{ .CurrentUser.DisplayName }}
            </span>
            <a href="/settings"
               class="px-3 py-1 rounded-md border border-slate-700 bg-slate-900 text-xs text-slate-200 hover:border-sky-400 hover:text-sky-300 transition-colors">
              Settings
            </a>
          {{ else }}
            <a href="/login"
               class="px-3 py-1 rounded-md border border-slate-700 bg-slate-900 text-xs text-slate-200 hover:border-sky-400 hover:text-sky-300 transition-colors">
              Log in
            </a>
            <a href="/signup"
               class="px-3 py-1 rounded-md bg-sky-500 text-slate-950 text-xs font-semibold hover:bg-sky-400 transition-colors">
              Sign up
            </a>
          {{ end }}
        </nav>
      </div>
    </header>

        <main class="flex-1">
      <div class="max-w-5xl mx-auto px-4 py-6">
        {{ if .Flash }}
          <div class="mb-3 rounded-md border border-sky-500/60 bg-sky-500/10 px-3 py-2 text-sm text-sky-200">
            {{ .Flash }}
          </div>
        {{ end }}

        {{ if .Error }}
          <div class="mb-4 rounded-md border border-red-500/70 bg-red-900/40 px-3 py-2 text-sm text-red-200">
            {{ .Error }}
          </div>
        {{ end }}
{{ end }}